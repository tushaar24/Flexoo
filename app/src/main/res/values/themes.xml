<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Flexxo" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnPrimarySurface">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Background Color-->
        <item name="android:colorBackground">@color/color_primary</item>
        <item name="colorOnBackground">@color/white</item>
        <!-- Customize your theme here. -->

        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>

    </style>

    <style name="FlexxoHHeadline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">@dimen/Headline4TextSize</item>
    </style>

    <style name="FlexxoHeadline6" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">@dimen/HeadLine6TextSize</item>
    </style>

    <style name="FlexxoBody1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">@dimen/Body1TextSize</item>
    </style>

    <style name="FlexxoBody2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/poppins</item>
        <item name="android:textSize">@dimen/Body2TextSize</item>
    </style>

    <style name="MovieDbTitle" parent="FlexxoHHeadline4">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="FindYourMovieTitle" parent="FlexxoHeadline6">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CategoriesTitle" parent="FlexxoHeadline6">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="FlexooButtom" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/Body1TextSize</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>


    <style name="TopRatedButton" parent="FlexooButtom">
        <item name="android:background">@drawable/bg_buttom</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textColor">@drawable/button_text_color_state</item>
        <item name="android:paddingStart">10dp</item>
    </style>

    <style name="UpComingButton" parent="FlexooButtom">
        <item name="android:background">@drawable/bg_buttom</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textColor">@drawable/button_text_color_state</item>
        <item name="android:paddingStart">10dp</item>
    </style>

    <style name="PopularButton" parent="FlexooButtom">
        <item name="android:background">@drawable/bg_buttom</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textColor">@drawable/button_text_color_state</item>
        <item name="android:paddingStart">10dp</item>
    </style>

    <style name="RoundedCornerImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="TitleTextViewstyle" parent="FlexxoBody2">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="MovieName" parent="FlexxoBody2">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ReleaseDateTitle" parent="FlexxoBody2">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="ReleaseDate" parent="FlexxoBody2">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AverageRatingTitle" parent="FlexxoBody2">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="AverageRating" parent="FlexxoBody2">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Seachview" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@drawable/bg_searchview</item>
    </style>


    <!--    MovieDetails elements-->

    <style name="MovieDbTitleInDetails" parent="FlexxoHeadline6">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="OverViewTitle" parent="FlexxoBody2">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="OverViewText" parent="FlexxoBody2">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <!--    Search Results-->

    <style name="SearchResultsTextView" parent="FlexxoHeadline6">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>